<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean id="javaMailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="127.0.0.1" />
        <property name="port" value="25" />
        <property name="username" value="username" />
        <property name="password" value="password" />

        <property name="javaMailProperties">
            <props>
                <prop key="mail.transport.protocol">
                    smtp
                </prop>
                <prop key="mail.smtp.auth">
                    true
                </prop>
                <prop key="mail.smtp.starttls.enable">
                    true
                </prop>
            </props>
        </property>
    </bean>

    <bean id="velocityEngine"
        class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
        <property name="resourceLoaderPath" value="classpath:template" />
        <property name="velocityPropertiesMap">
            <map>
                <entry key="input.encoding" value="UTF-8" />
                <entry key="output.encoding" value="UTF-8" />
            </map>
        </property>
    </bean>
</beans>